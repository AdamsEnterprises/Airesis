#proposalsListContainer {
	
}

#loading_proposals {
	background-color: #FAFAFA;
	border-top: 1px solid #E3E3E3;
	display: block;
	padding: 10px 0;
	text-align: center;
	color: #3366CC;
	font-weight: bold;
	cursor: pointer;
}
#loading_proposals:hover {
	background-color: #F4F4F4;
	text-decoration: none;
}


.proposalComment {
	padding: 20px 0 0;
	clear: both;
}


.proposalCommentPostedAt {
	/*margin-bottom:16px;*/
}


.proposalNewComment {
	margin-top: 5px;
	clear: both;
}

.proposalNewCommentField {
	border:none;
	width: 100%;
	height: 130px;
	resize: none;
	background: none;
}


.proposal_title_index {
	overflow: hidden;
	border-bottom: 1px solid #D8D2C3;
}

.proposal_main {
	position: relative;
	border: 2px solid #808080;
	-webkit-border-radius: 15px;
	-moz-border-radius: 15px;
	border-radius: 15px;
	background: repeat scroll 0 0 #FFF;
	background: -webkit-gradient(linear, center top, center bottom, color-stop(30%, #FFFFFF), color-stop(70%, #DFEFFC));
	background: -moz-linear-gradient(center top , #FFFFFF 30%, #DFEFFC 70%) repeat scroll 0 0 transparent;
}
.proposal_comment {
	position: relative;
	border: 1px solid #CCCCCC;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;	
	margin-left: 50px;
	color: #333333;
}
.proposal_list {
	position: relative;
	border: 2px solid #808080;
	-webkit-border-radius: 15px;
	-moz-border-radius: 15px;
	border-radius: 15px;
	background: repeat scroll 0 0 #FFF;
	background: -webkit-gradient(linear, center top, center bottom, color-stop(30%, #FFFFFF), color-stop(70%, #DFEFFC));
	background: -moz-linear-gradient(center top , #FFFFFF 30%, #DFEFFC 70%) repeat scroll 0 0 transparent;
	margin-left: 0px;
	margin-bottom: 10px;
	padding: 6px;
}

.proposal_list .maintitle {
	line-height: 1.2em;	
	font-size: large;
	font-weight: bold;
}

.proposal_list .datetime {
	margin: 5px 0px;
}

.proposal_list .proposal_content {
}

.proposal_list .authors {
}

.proposal_list .authors .title{
	font-weight: bold;
	margin-right:5px;
	float:left;
	color: #808080;
}

.proposal_list .groups .title{
	font-weight: bold;
	margin-right:5px;
	float:left;
	color: #808080;
}


.proposal_list .borders .title{
	font-weight: bold;
	margin-right:5px;
	float:left;
	color: #808080;
}


.proposal_list .borders .border {
	width: auto;
	float:left;
	margin-left: 5px;
	padding: 0 5px;
}


.proposal_list .rankcontainer{	
	float:left;
}

.proposalTitle {
	border-bottom: 1px solid #D8D2C3;
	/*border-top: 1px solid #D8D2C3;*/
	margin-bottom: 8px;
	margin-top: 0px;
	padding: 2px
}

.rankingpanelcontainer {
	display: inline-block;
}


.new_blog_comment {
	
}

.blogPoster {
	font-style: italic;
}

.blogCommentAdmin {
	background-color: #EBE0BF;
}

.blogFooter a {
	margin-right: 5px;
}

.blogUserImage {
	float: left;
	margin: 0px 5px 5px 0px;
}

ul.blogList {
	list-style: none;
	padding: 5px 10px;
	margin: 0;
}
ul.blogList li {
	display: inline;
	padding: 0px 10px;
	border-left: 1px solid #777;
	margin: 0px 0px;
}
ul.blogList li.blogListFirst {
	border-left: none;
}

.blogEditRightPanel {
	float: left;
	margin-left: 20px;
	width: 450px;
}
.blogEditLeftPanel {
	float: left;
}
#blogImages {
	width: 100%;
}
.blogImageHeader td {
	font-weight: bold;
}
.imageFileName {
	width: 120px;
	overflow-x: hidden;
}

.blogMarkdownHelp {
	margin-top: 20px;
}

.blogKitCode pre {
	overflow-x: auto;
}




/*pannello history*/
#proposal_histories .history {
	float: left;
}
#proposal_histories .diffview {
	float: left;
	width: 400px;
}

.proposalMainContainer {
	clear: both;
}

.proposalMainContainer .proposal_content {
	word-wrap: break-word;
	margin: 0 10px;
	text-align: justify;
}

.rankleftpanel {
	/*border: 1px solid #CCC;
	#border-radius: 2px;*/
	margin: auto;
}

.rankleftpanel .littleText {
    font-size: 25px;
    font-weight: bold;
    text-align: left;
}

.rankleftpanel .rightAlign {
	color: #F17C22;
	font-size: 21px;
    font-weight: bold;
    text-align: right;
}

.rankleftpanel .voteup {
	float:  left;
	margin-right: 10px;
}

.rankleftpanel .votedown {
	float:  left;
}

.rankleftpanel .handscontainer {
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 5px;
	height: 30px;
}



.baloon {
	float: left;
	border: 1px solid #CCCCCC;
	-moz-border-radius: 15px;
	border-radius: 15px;
	background-color: #EBE0BF;
}
.baloon_header {
	margin: 0px 5px;
}
.baloon-content {
	word-wrap: break-word;
	margin: 0px 5px;
	text-align: justify;
}
.baloon-footer {
	/*margin: 0px 5px;*/
	font-size: 0.9em;
	margin-top: 5px;
	margin-left: 5px;
}

.baloon-triangle {
	background: url('<%= asset_path('baloon-triangle.png') %>') no-repeat top left;
	width: 10px;
	height: 21px;
	position: absolute;
	left: -10px;
	top: 7px;
}
