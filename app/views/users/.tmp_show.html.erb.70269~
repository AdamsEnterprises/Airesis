<%if current_user == @user %>
<script type="text/javascript" src="/javascripts/simplemodal.js">
</script>
<script>
    function doModal(el){
        el.modal({
            opacity: 60,
            overlayCss: {
                backgroundColor: "#dddddd"
            },
            minWidth: '400px',
            minHeight: '200px',
            transient: 'true',
            persist: 'true',
            
            onShow: function(dialog){
                dialog.data.prepend('<div id="error_updating"></div>');
            },
            
            onClose: function(dialog){
                $('#error_updating').remove();
                $.modal.close();
            }
        });
    }
</script>
<%end %>
