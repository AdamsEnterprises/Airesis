<div id="new_group_area" title="Nuova area di lavoro" style="display: none; font-size: 14px;">
  <%= form_for [@group, GroupArea.new], :validate => true, :remote => true do |e| %>
      <p>
        <%= e.label :name, t('activerecord.attributes.group_area.name') %> <br/>
        <%= e.text_field :name %>
      </p>

      <p>
        <%= e.label :description, t('activerecord.attributes.group_area.name.description') %><br/>
        <%= e.text_area :description, :rows => 2, :style => "width:100%", :class => "elastic" %>
      </p>
      <% if ['new', 'create'].include? params[:action] %>
          <p>
            <%= e.label :default_role_name %>    <br/>
            <%= e.text_field :default_role_name, style: "width: 400px" %>
          </p>

      <% else %>

      <% end %>

      <%= e.submit 'Crea', :class => 'buttonStyle' %>
  <% end %>
</div>

<script type="text/javascript">
    $(function () {
        $("#new_group_area").validate();
        disegnaBottoni();
        $(".elastic").elastic();


        $('#group_description')
                .charCount({
                    counterElement: 'div',
                    allowed: 2000,
                    warning: 100
                });

    });
</script>