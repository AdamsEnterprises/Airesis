<%= simple_form_for ((@group && !in_subdomain?) ? [@group, @partecipation_role] : @partecipation_role), remote: request.xhr? do |f| %>

    <%= f.input :name %>

    <% unless @group.partecipation_role_id == @partecipation_role.id %>
        <%= f.input :description, as: :text %>
    <% end %>

    <%= link_to t('buttons.cancel'), '#', class: 'btn', data: {'reveal-close' => ''} %>
    <%= link_to t('buttons.go_back'), :back, class: 'btn', data: {back: ''} %>
    <%= f.button :button, button_name, class: 'btn blue saveButton' %>
<% end %>

