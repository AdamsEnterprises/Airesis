<div class="title clearfix">
  <span class="left"><%= t('pages.home.index.last_proposals') %></span>
  <%=link_to t('.proceed_to_proposals'), proposals_path, class: 'btn right' %>
</div>

<% @proposals_p = Proposal.open_space_portlet(current_user) %>
   <% unless @proposals_p.empty? %>
