<a name='post-<%= post.id %>'></a>
<div class="row">
  <div id='post_<%= post_counter + 1 %>' class='post <%= cycle('odd', 'even') -%> span10'>
      <% if post.pending_review? %>
      <div class='moderation alert'>
        <%= t(".pending_review") %>
        <% if forem_admin_or_moderator?(post.topic.forum) %>
          <% if local_assigns[:mass_moderation] %>
            <%= render "/forem/posts/moderation_tools", :post => post %>
          <% else %>
            <%= form_tag group_frm_forum_moderate_posts_url(@group,forum), :method => :put do %>
              <%= render "/forem/posts/moderation_tools", :post => post %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <div class='user span2'>
      <div class='username'>
        <%= link_to_if Frm.user_profile_links, post.user.fullname, post.user %>
      </div>
      <div class='icon'><%= forem_avatar(post.user, :size => 60) %></div>
    </div>

    <div class='contents span7'>
      <a href='#post-<%= post.id %>'>
        <time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time>
      </a>
      <%= forem_format(post.text) %>

      <% if post.reply_to %>
        <div class='in-reply-to'>
          <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user}", "#post-#{post.reply_to.id}" %>
        </div>
      <% end %>

      <% if current_user %>
        <div class='btn-group'>
          <% if can?(:reply, post.topic) %>
            <% if post.topic.can_be_replied_to? %>
              <%= link_to t('reply', :scope => 'forem.topic'), new_group_forum_topic_post_url(@group,post.topic.forum,post.topic, :reply_to_id => post.id), :class => "btn btn-primary" %>
              <%= link_to t('quote', :scope => 'forem.topic'), new_group_forum_topic_post_url(@group,post.topic.forum,post.topic, :reply_to_id => post.id, :quote => true), :class => "btn btn-success" %>
            <% end %>
          <% end %>
          <% if post.owner_or_admin?(current_user) %>
            <% if can?(:edit_post, post.topic.forum) %>
              <%= link_to t('edit', :scope => 'forem.post'), edit_group_forum_topic_post_url(@group,post.topic.forum,post.topic, post), :class => "btn btn-info" %>
            <% end %>
            <%= link_to t('delete', :scope => 'forem.topic'), group_forum_topic_post_url(@group,post.topic.forum,post.topic, post), :method => :delete, data: { :confirm => t("are_you_sure") }, :class => "btn btn-danger" %>
          <% end %>
        </div>
      <% end %>
    
    </div>
  </div>
</div>
