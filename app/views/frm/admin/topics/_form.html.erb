<%= simple_form_for @topic, url: group_frm_admin_topic_url(@group,@topic) do |f| %>
  <%= f.input :subject, label:t('simple_form.labels.topic.subject')%>
  <%= f.association :forum , :label => "Forum" %> <!--TODO:I18n-->
  <%= f.label :locked %>
  <%= f.check_box :locked %>
  <%= f.label :pinned %>
  <%= f.check_box :pinned %>
  <%= f.label :hidden %>
  <%= f.check_box :hidden %>

  <br />
  <%= f.submit t('update', scope:'helpers.submit.topic'), :class => "btn btn-primary" %>
<% end %>
