<h2><%= t('forem.admin.group.index') %></h2>
<%= link_to t('back_to_admin', :scope => "forem.admin"), group_frm_admin_root_url(@group), class: 'btn' %><br><br>
<%= link_to t('forem.admin.group.new'), new_group_frm_admin_group_url(@group), :class => "btn blue" %>

<table id='groups' class='index table table-striped' cellspacing='0'>
  <thead>
  <tr>

    <th><%= t('name', :scope => 'forem.admin.groups') %></th>
    <th><%= t('edit', :scope => 'forem.admin.groups') %></th>
    <th><%= t('delete', :scope => 'forem.admin.groups') %></th>
  </tr>
  </thead>
  <tbody>
  <% @frm_groups.each do |group| %>
      <tr>

        <td>
          <%= link_to forem_emojify(group.name), group_frm_admin_group_url(@group,group) %>
        </td>
        <td>
          <%= link_to t('edit', :scope => 'forem.admin.groups'), group_frm_admin_group_url(@group,group), class: 'btn editButton' %>
        </td>
        <td>
          <%= link_to t('delete', :scope => 'forem.admin.groups'), group_frm_admin_group_url(@group,group), :method => :delete, class: 'btn trashButton' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
