<% if !@topic.subscriber?(current_user.id) %>
    <%= link_to t(".subscribe"), subscribe_group_forum_topic_url(@group, @forum, @topic), :remote => true, :class => "btn btn-success" %>
<% else %>
    <%= link_to t(".unsubscribe"), unsubscribe_group_forum_topic_url(@group, @forum, @topic), :remote => true, :class => "btn btn-danger" %>
<% end %>