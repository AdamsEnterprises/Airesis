<dl id="roles_accordion" class="accordion" data-accordion>

  <% @group.partecipation_roles.each_with_index do |role, idx|
    abilitations = role.action_abilitations.by_group(@group).all %>
      <dd>
        <a href="#role_<%= role.id %>"><%= role.name %>
          <% if (role.id == @group.partecipation_role_id) %> (default)
          <% end %>
        </a>

        <div id="role_<%= role.id %>" class="content <%= 'active' if idx==0 %>">
          <% if (role.id != @group.partecipation_role_id) %>
              <%= link_to t('buttons.delete'), group_partecipation_role_url(@group,role), method: :delete, remote: true, class: 'btn deleteButton', style: 'float:right', data: {confirm: t('pages.groups.edit_permissions.confirm_role_deletion')} %>
          <% end %>
          <%= link_to t('buttons.edit'), edit_group_partecipation_role_url(@group,role), class: 'btn editButton', style: 'float:right', remote: true %>
          <h4><%= role.description %></h4>
          <% GroupAction.order(:seq).each do |action| %>
              <input type="checkbox" onclick="return change_permission_block(this,<%=role.id%>,<%=action.id%>);"
                     <% if (abilitations.find { |a| a.group_action_id == action.id }) %>
                     checked="true"
                     <% end %>
                     />
              <span><%= action.description %></span> <br/>
          <% end %>
        </div>
      </dd>
  <% end %>
</dl>
<script>
    $(function () {
        disegnaBottoni();
    });
</script>