<div class="title">
  <%= t('pages.groups.show.last_topics') %>
</div>
<% if Frm::Topic.accessible_by(Ability.new(current_user)).where(groups: {id: @group}).order(:created_at).limit(10).size > 0 %>
    <div class="scrollable">
      <div class="mini_topics">
        <%= render partial: 'frm/topics/mini_topic', collection: @group.last_topics, as: 'topic' %>
      </div>
    </div>
<% end %>
