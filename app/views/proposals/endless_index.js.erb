$('#proposalsListContainer<%=params[:state]%>').append("<%= escape_javascript(render :partial => 'proposals/list', :locals => {:proposals => @proposals})%>");
<%if @proposals.total_pages > @proposals.current_page%>
  $('#loading_proposals<%=params[:state]%>').show();
<%else%>
  $('#loading_proposals<%=params[:state]%>').hide();
<%end%>