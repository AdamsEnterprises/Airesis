<% if @proposal.users.include?(current_user) %>
    <% if (count_available = @proposal.available_authors.count) > 0 %>
        <%= link_to url: {controller: "proposals", action: "available_authors_list", group_id: params[:group_id]}, remote: true, class: 'btn ', data: {disable_with: t('loading')} do%>
        <i class="fa fa-user"></i>
        <%=t('pages.proposals.show.available_editors_button', count: count_available)%>
        <%end%>
    <% end %>
<% end %>
