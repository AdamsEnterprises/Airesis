<h1><%= t('pages.blogs.new.title') %></h1>
<%= form_for(@blog) do |f| %>
<% if @blog.errors.any? %>
<ul>
	<% @blog.errors.full_messages.each do |msg| %>
	<li>
		<%= msg %>
	</li>
	<% end %>
</ul>
<% end %>
<p>
	<%= f.label :title %>
	<br />
	<%= f.text_field :title %>
</p>
<p>
	<%= f.submit t('pages.blogs.new.create_button'), :class => 'buttonStyle' %>
</p>
<% end %>

<%= link_to t('pages.blogs.new.cancel_button'), :back, :class => 'buttonStyle' %>