<script type="text/javascript"
  src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDtW03LI8FjTNde4lliYapacbJrtAXQ6w8&sensor=false">
</script>
  
  
<h1 class="eventtitle"><%= @event.title%></h1>


<div class="event_when">
	<div class="event_calendar">
		<div class="day">
			<%=I18n.localize(@event.starttime, :format => :weekday)%>
		</div>
		<div class="number">
			<%=@event.starttime.mday%>
		</div>
		
	</div>
	<h2>
	<%= I18n.localize(@event.starttime, :format => :long_date)%>
	</h2>
		<div style="clear: both"></div>
</div>
<hr/>

<%if (@event.event_type_id != 2)%>
<div class"event_where">
	<div id="map_canvas" style="width: 320px; height: 320px; float:left;"></div>	
		<%if @event.place%>
	<div style="float:left">
		    <h2><%=@event.place.comune.description%><br/> <%=@event.place.address%></h2>
	</div>
		    <%end%>
	<div style="clear: both"></div>
</div>

<hr/>
<div class="event_description"> 
		<%=@event.description%>
	</div>
		<%if @event.place%>

<script type="text/javascript">
	if (!geocoder)
		geocoder = new google.maps.Geocoder();
	
	var latlng = new google.maps.LatLng(<%=@event.place.latitude_original%>,<%=@event.place.longitude_original%>);
	var center = new google.maps.LatLng(<%=@event.place.latitude_center%>,<%=@event.place.longitude_center%>);
	var zoom = <%=@event.place.zoom%>;		
	
	
	var myOptions = {
		zoom : zoom,
		center: center,
		mapTypeId : google.maps.MapTypeId.ROADMAP,
		panControl : false,
		streetViewControl : false,
		mapTypeControl : true,
		draggable: false,
	};

	map = new google.maps.Map(document.getElementById('map_canvas'), myOptions);	
	
	marker = new google.maps.Marker({
		map : map,
		position: latlng,
		draggable : false
	});
</script>
<%end%>
<%end%>
<p>
	<%if (@event.event_type_id == 2)%>
	Si potr√† esprimere il proprio voto su questo stesso sito nella <%=link_to 'pagina dedicata', votation_path%>
		<h3>In queste giornate si voteranno le seguenti proposte</h3>
		
		<table>
			<tbody>
				<% @event.proposals.each do |proposal|%>
					<tr>
						<td>
							<%= link_to proposal.title, proposal%>
						</td>
					</tr>
				<%end%>
			</tbody>
			
		</table>
	<%end%>
</p>
<br />