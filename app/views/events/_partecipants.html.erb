<% @event.meeting.yes_partecipations.each do |partecipation| %>
    <div>
      <div style="float:left;">
        <%= partecipation.user_image_tag 48 %>
      </div>
      <div style="float:left;margin-top:3px;margin-left:5px;">
        <%= link_to_user partecipation.user, :full_name => true %>
        <% if partecipation.guests > 0 %>

            <%= " con #{partecipation.guests} ospiti" %>
        <% end %>
        <div style="margin-top:5px;"></div>
        <span style="color:darkslategray">"<%= partecipation.comment %>"</span>
      </div>
      <div style="clear: both;"></div>
    </div>
<% end %>

<% if @event.meeting.yes_partecipations.empty? %>
    <% if @event.is_past? %>
        <h4>Non ha partecipato nessuno</h4>
    <% else %>
        <h4>Ancora nessun partecipante</h4>
    <% end %>
<% end %>