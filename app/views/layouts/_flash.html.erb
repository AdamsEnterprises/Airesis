<% flash.each do |key,value| %>
<% if ((key == :notice) || (key == :info))
	classeFlash = 'ui-state-highlight'
   else
 	classeFlash = 'ui-state-error'
   end
%>
<div class="flashMessage <%= classeFlash %>">
    <span class="message"><%= value %></span>
</div>
<%end %>

<script>
$(document).ready(function () {
    $('.flashMessage').delay(7000).hide(2000);
});
</script>