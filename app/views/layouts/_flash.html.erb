<script>
$(function () {
    <% flash.each do |key,value| %>
      <%if (key == :info) %>
        toastr.info('<%=j value%>');
      <%elsif (key == :notice)%>
        toastr.success('<%=j value%>');
      <%elsif  (key == :warn) %>
        toastr.warning('<%=j value%>');
      <%else%>
        toastr.error('<%=j value%>');
      <%end%>
    <%end%>
});
</script>