<div class="fixed">
  <nav class="top-bar" data-topbar>
    <section class="top-bar-section">
      <div class="logo-wrapper hide-for-small-only">
        <div class="logo">
          <%= link_to (image_tag 'logo_new.png', class: "logo1", style: 'height:30px', data: ({dropdown: "airesis_panel", options: "is_hover:true;align:center;"} unless true)), root_path, tabindex: 1 %>
        </div>
      </div>


      <ul class="left">
        <% unless in_subdomain? %>
            <li class="has-form">
              <a id="logo-but" href="#" class="button" data-dropdown="hover1" data-options="is_hover:true">
                <span class="icon-users small"></span>
                <span class="show-for-large-up"><%= t('pages.header.groups_title') %></span>
              </a>
            </li>
        <% end %>
        <% if current_user %>
            <li class="has-form">
              <%= simple_form_for Search.new, data: {remote: true} do |f| %>
                  <div class="row collapse">
                    <div class="large-12 small-10 columns">
                      <%= f.text_field :q, placeholder: "Find Stuff" %>
                    </div>
                    <!--<div class="large-2 small-2 columns">
                  <%= link_to searches_path do %>
                      <div class="icon-search medium"></div>
                  <% end %>
                </div>-->
                  </div>
              <% end %>
              <div id="search_box" class="card"></div>
            </li>
        <% end %>
      </ul>

      <ul class="right">
        <li class="hide-for-small"><%= link_to sostienici_path, class: 'cur love', title: t('pages.header.support_us') do %>
              <div class="icon-heart medium"></div>
          <% end %></li>
        <li class="hide-for-small">
          <%= link_to "#", onclick: "return false;", data: {dropdown: "help_panel", options: "is_hover:true"} do %>
              <div class="icon-question medium cur info" title="TUTORIAL"></div>
          <% end %>
        </li>

        <% if current_user %>
            <li>
              <%= link_to '#', class: 'button account show-for-large-up', data: {dropdown: "personal_menu_large", options: "is_hover:true"} do %>
                  <%= current_user.user_image_tag 30, cert: false %>
                  <span><%= current_user.fullname %></span>
              <% end %>
              <%= link_to '#', class: 'account hide-for-large-up', data: {dropdown: "personal_menu_small", options: "is_hover:true"} do %>
                  <%= current_user.user_image_tag 30, cert: false %>
              <% end %>
            </li>
            <li>
            </li>
            <li>
              <%= link_to "#", onclick: "return false;", id: "alerts_link", data: {dropdown: "alert_cont", options: "is_hover:true"} do %>
                  <div class="icon-bell medium" title="ALERTS"></div>
              <% end %>
            </li>
        <% else %>
            <% if in_subdomain? %>
                <li>
                  <%= eval "#{@group.subdomain}_login" if @group %>
                </li>
            <% else %>
                <li class="has-form">
                  <a id="login_button" href="#" onclick="return false;" class="button show-for-medium-up"><%= t('pages.header.login') %></a>
                  <%= link_to t('pages.header.login'), '/users/sign_in', class: "button show-for-small" %>
                </li>
                <li class="has-form">
                  <%= link_to t('pages.header.menu.registration_button'), new_registration_path(resource_name), class: 'button' %>
                </li>
            <% end %>
        <% end %>
      </ul>
    </section>
  </nav>
</div>


<ul id="help_panel" class="f-dropdown xsmall" data-dropdown-content>
  <li>

    <%= link_to '#', title: t('pages.home.index.feedback'), onclick: "$('.feedbackBtn').click();return false;" do %>
        <span class="icon-bell"></span>
        <%= t('pages.home.index.feedback') %>
    <% end %>
  </li>
  <li>
    <%= link_to videoguide_path, title: t('pages.home.index.videos') do %>
        <span class="icon-film"></span>
        <%= t('pages.home.index.videos') %>
    <% end %>
  </li>
  <li>
    <%= link_to 'http://bugtracking.airesis.it/projects/airesis/wiki/FAQ', title: t('pages.home.index.FAQ'), target: '_blank' do%>
        <span class="icon-notebook"></span>
        <%=t('pages.home.index.FAQ')%>
    <% end %>
  </li>
  <li>
    <%= link_to 'http://bugtracking.airesis.it/projects/airesis/wiki/Home_Page', title: t('pages.home.index.guide'), target: '_blank' do%>
        <span class="icon-notebook"></span>
        <%=t('pages.home.index.guide')%>
    <% end %>
  </li>
  <li>
    <%= link_to edemocracy_path, title: t('pages.home.index.whatis') do%>
        <span class="icon-info"></span>
        <%=t('pages.home.index.whatis')%>
    <% end %>
  </li>
  <li>
    <%= link_to chisiamo_path, title: t('pages.home.index.whowe') do%>
        <span class="icon-users2"></span>
        <%=t('pages.home.index.whowe')%>
    <% end %>
  </li>

</ul>

<% unless in_subdomain? %>
    <div id="hover1" class="f-dropdown medium" data-dropdown-content>


      <% if user_signed_in? %>
          <% @groups = current_user.groups %>
          <% if @groups.empty? %>
              <%= t('pages.header.no_groups_yet') %>
          <% else %>
              <% @groups.each do |group| %>

                  <%= render 'groups/group_menu_item', group: group %>

              <% end %>
          <% end %>
      <% else %>
          <div class="group-item">
            <div style="float:left;">
              <%= image_tag 'logo30.png', width: 60, alt: ENV['APP_LONG_NAME'] %>
            </div>
            <div class="p1"><%= link_to t('open_space'), proposals_url(subdomain: false) %></div>

            <div class="p2">
              <%= link_to t('pages.header.groups.proposals'), proposals_url(subdomain: false) %> -
              <%= link_to t('pages.header.groups.events'), events_url(subdomain: false) %>
            </div>
            <div class="clearboth"></div>
          </div>
      <% end %>
      <div class="group-item">
        <%= link_to t('pages.header.open_group'), new_group_url(subdomain: false), class: 'btn blue' %>
        <%= link_to t('pages.header.new_group'), groups_url(subdomain: false), class: 'btn blue' %>
      </div>
    </div>

    <div id="airesis_panel" class="f-dropdown medium" data-dropdown-content>
      PANEL
    </div>
<% end %>

<% unless current_user %>
    <div id="tolr" class="not_logged">
      <div id="inlog">

      </div>

      <div id="login_panel" class="reveal-modal large" data-reveal>
        <h2><%= t('pages.header.login') %></h2>

        <div class="row">
          <div class="columns large-6">
            <%= form_for User.new, url: user_session_path, html: {class: 'box'} do |f| %>

                <%= f.text_field :login, placeholder: t('pages.header.login_placeholder'), autocomplete: :off %>

                <%= f.password_field :password, placeholder: 'Password' %>         <br/>
                <%= f.label :remember_me do %>
                    <%= f.check_box :remember_me %>
                    <%= t('pages.header.menu.remember_me') %>
                <% end %>

                <%= f.button t('pages.header.menu.login_button'), class: "btn blue loginButton" %>

            <% end %>


            <div class="box lost">
              <p><%= link_to t('pages.header.menu.forgot_password_button'), new_password_path(resource_name) %></p>

              <p><%= link_to t('pages.header.menu.resend_email_button'), new_confirmation_path(resource_name) %></p>
            </div>
          </div>
          <div class="columns large-6">
            <% if ::Configuration.socialnetwork_active && !in_subdomain? %>
                <%= cache ["social_network_header", I18n.locale] do %>
                    <div class="box more">
                      <div class="more">
                        <%= link_to t('pages.top_panel.facebook_login'), user_omniauth_authorize_path(:facebook), alt: t('pages.top_panel.facebook_login'), title: t('pages.top_panel.facebook_login'), class: 'zocial facebook' %>
                      </div>
                      <div class="more">
                        <%= link_to t('pages.top_panel.google_login'), user_omniauth_authorize_path(:google_oauth2), alt: t('pages.top_panel.google_login'), title: t('pages.top_panel.google_login'), class: 'zocial google' %>
                      </div>
                      <div class="more">
                        <%= link_to t('pages.top_panel.twitter_login'), user_omniauth_authorize_path(:twitter), alt: t('pages.top_panel.twitter_login'), title: t('pages.top_panel.twitter_login'), class: 'zocial twitter' %>
                      </div>
                      <div class="more">
                        <%= link_to t('pages.top_panel.meetup_login'), user_omniauth_authorize_path(:meetup), alt: t('pages.top_panel.meetup_login'), title: t('pages.top_panel.meetup_login'), class: 'zocial meetup' %>
                      </div>
                      <div class="more">
                        <%= link_to t('pages.top_panel.linkedin_login'), user_omniauth_authorize_path(:linkedin), alt: t('pages.top_panel.linkedin_login'), title: t('pages.top_panel.linkedin_login'), class: 'zocial linkedin' %>
                      </div>
                    </div>
                <% end %>
            <% end %>
          </div>
        </div>
        <a class="close-reveal-modal">&#215;</a>
      </div>
    </div>
<% end %>




