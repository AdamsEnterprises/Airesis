<table class="row footer">
  <tr>
    <td class="wrapper">

      <table class="six columns">
        <tr>
          <td class="left-text-pad">
            <h5><%= 'Connect With Us:' %></h5>
            <table class="tiny-button facebook">
              <tr>
                <td>
                  <%= link_to 'Facebook', Maktoub.facebook_url, target: '_blank' %>
                </td>
              </tr>
            </table>
            <br>
            <table class="tiny-button twitter">
              <tr>
                <td>
                  <%= link_to 'Twitter', Maktoub.twitter_url, target: '_blank' %>
                </td>
              </tr>
            </table>
            <br>
            <table class="tiny-button google-plus">
              <tr>
                <td>
                  <%= link_to 'Google +', Maktoub.google_plus_url, target: '_blank' %>
                </td>
              </tr>
            </table>
          </td>
          <td class="expander"></td>
        </tr>
      </table>
    </td>
    <td class="wrapper last">
      <table class="six columns">
        <tr>
          <td class="last right-text-pad">
            <h5><%= 'Contact Info:' %></h5>
            <%= 'Email:' %> <%= mail_to 'info@airesis.it' %>
          </td>
          <td class="expander"></td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<table class="row">
  <tr>
    <td class="wrapper last">

      <table class="twelve columns">
        <tr>
          <td align="center">
            <center>
              <p style="text-align:center;">
                <%= link_to t('mailer.default.terms'),
                            terms_url(host: @user.original_locale.host, l: @user.original_locale.lang), target: '_blank' %>
                |
                <%= link_to t('mailer.default.privacy'),
                            privacy_url(host: @user.original_locale.host, l: @user.original_locale.lang), target: '_blank' %>
                |
                <% if @unregistered %>
                    <%= link_to t('mailer.invite.no_more_button'),
                                anymore_group_group_invitation_group_invitation_email_url(@group, @group_invitation, @group_invitation_email.token, email: @group_invitation_email.email) %>
                <% else %>
                    <%= link_to t('mailer.default.edit_preferences'),
                                alarm_preferences_users_url(host: @user.original_locale.host, l: @user.original_locale.lang), target: '_blank' %>
                <% end %>
            </center>
          </td>
          <td class="expander"></td>
        </tr>
      </table>

    </td>
  </tr>
</table>
