<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:fb="http://ogp.me/ns/fb#" lang="en-US" >
	<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article# blog: http://ogp.me/ns/blog# http://ogp.me/ns/fb/airesis#">
		<title><%= @page_title ? @page_title + ' - ' + APP_SHORT_NAME : APP_SHORT_NAME%></title>
		<%=render :partial => "layouts/head" %>
	</head>
	<body>

	<%=render :partial => "layouts/header" %>
	<div id="subheader">
		<div class="body_maxwidth">
			<div class="header_image leftUserImage image_container">
		    	<%if @group%>
		    		<%= @group.group_image_tag 120 %>
                    <div class="caption">
                      <a style="color:white">Modifica l'immagine</a>
                    </div>
		    	<%else%>
		    		<%= image_tag 'logo120.png', :width => 120, :alt => APP_LONG_NAME %>
		    	<%end%>
		    </div>
		    <div class="group_title">
			<h1>
			<%if @group%>
				<%if @group.id%>
					<%= @group.name%>
				<%else%>
					Registrazione Gruppi
				<%end%>
			<%else%>
				Elenco gruppi
			<%end%>
			</h1>
			<%if @group%>
				<%if @group.id%>
					<%=link_to 'Home Page', @group, :class => 'homeButton buttonStyle' %>
					<%=link_to 'Le proposte', group_proposals_path(@group), :class => 'ideaButton buttonStyle'%>
					<%=link_to 'Calendario', group_events_path(@group), :class => 'calendarButton buttonStyle' %>
					<%=link_to 'Area candidati', group_candidates_path(@group),  :class => 'personButton buttonStyle' if current_user%>
					<%if can? :update, @group%>
						<%= link_to 'Impostazioni', edit_group_path(@group), :class => 'settingsButton buttonStyle'  %>
					<%end%>
				<%end%>
			<%end%>
			</div>
		</div>

	</div>

    <!-- ##### Main Copy ##### -->
    <div id="main-copy">
        <div id="groups_leftpanel">
            <%= yield :left_panel%>
        </div>
        <div id="centerpanelextended">
            <div id="flash_messages" style="height:20px">
                <%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>
            </div>
            <%= yield :layout %>
        </div>
        <div style="clear: both; height: 0; overflow: hidden;"></div>
        <div id="footer"><%=render :partial => "layouts/footer" %>
        </div>
    </div>

    </body>
    </html>
