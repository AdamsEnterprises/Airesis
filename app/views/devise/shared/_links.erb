<br />
<%- if devise_mapping.omniauthable? %>
<%= link_to "Accedi tramite Facebook Connect", user_omniauth_authorize_path('facebook'), :class=>"fb-login-button" %>
 
<% end -%>
<br />
<%- if controller_name != 'sessions' %>
  <%= link_to "Login", {:action=>"new", :controller=>"devise/sessions", :format=>:user} %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrati", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Hai dimenticato la password?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Non hai ricevuto l'email per la conferma?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

