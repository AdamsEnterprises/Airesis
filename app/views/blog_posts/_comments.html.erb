<div class="blogComments" id="blogPostComments">
	<% @blog_comments.each do |comment| %>
		<%= render :partial => 'blog_posts/comment', :locals => {:comment => comment} %>
	<% end %>
</div>

<script type="text/javascript">
	var retval = false;
	var clicked;
	function hiding(event,id) {
		if (!retval) {
			clicked = $(this);
			if (confirm('Sei sicuro di voler cancellare questo commento?')) {			
				$('#comment'+id).hide(600,function() {
					retval = true;
					clicked.click();
				});
				event.stopPropagation();
				return false;
			}
			event.stopPropagation();
			return false;
		}
		else {
			retval = false;
			return true;
		}
		
	}
</script>
